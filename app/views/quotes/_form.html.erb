<div class="row-fluid">
  <%= simple_form_for @quote do |f| %>
    <%= render :partial  => "/shared/form_error", :locals  => {:f  => f} %>

    <%= f.input :author %>

    <%= f.input :source %>

    <%= f.input :source_url, :input_html  => {:class  => "span8"}%>

    <%= f.input :quotation, :as  => :text, :input_html  => {:class  => "span8", :rows  => 13} %> 

    <%= f.input :lang, :collection  => Language.supported, :label_method  => :name, :value_method  => :iso_code %>

    <%= f.input :tags, :input_html  => {:class  => "span4"} %>

    <div class="form-actions">
      <%= f.button :submit, :class  => "btn btn-primary" %> 
      <button class="btn"><%= link_to "Cancel", url_for(:back) %></button>
    </div>
  <% end -%>
</div>
