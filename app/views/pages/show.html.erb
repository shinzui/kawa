<% content_for(:page_title) { @page.title } %>
<div class="row-fluid">
  <article class="page-data span12">
    <%= @page.header %>
    <%= @page.data.html_safe %>
  </article>
</div>

<%= render :partial  => 'shared/metadata', :locals  => {:presenter => @page} %>

<div class="form-actions row-fluid">
  <%= link_to 'Edit page', edit_page_path(@page.model), :rel  => "edit-page", :class  => "btn-info btn-small", :alt  => "Edit", :title  => "Edit" %>
  <%= link_to 'Delete page', @page.model, :rel  => 'delete-page', :method  => :delete, :confirm  => "Are you sure?", :class  => "btn-danger btn-small", :alt  => "Delete" %>
</div>

