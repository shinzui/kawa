<div class=" page-data row">
  <div class="span12">
    <h1><%= @page.name %></h1>
    <div> <%= @page.data.html_safe %></div>
  </div>
</div>
<div class="page-metadata row">
  <div class="span8">
    <%= @page.created_at %>
    <%= @page.updated_at %>
  </div>
  <div class="tags pull-right">
    <% if @page.tags? %>
      <i class="tags"></i>
      <% @page.tags.each_with_index do |tag, idx| %>
        <%= link_to tag, pages_path(:tag  => tag) %><%= render_comma(@page.tags, idx) %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="form-actions row">
  <div class="span12">
  <%= link_to 'Edit page', edit_page_path(@page.model), :rel  => "edit-page", :class  => "btn small", :alt  => "Edit", :title  => "Edit" %>
  <%= link_to 'Delete page', @page.model, :rel  => 'delete-page', :method  => :delete, :confirm  => "Are you sure?", :class  => "btn danger small", :alt  => "Delete" %>
  </div>
</div>

