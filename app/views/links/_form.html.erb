<div class="row">
  <%= simple_form_for @link do |f| %>
    <%= render :partial  => "/shared/form_error", :locals  => {:f  => f} %>

    <div class="row">
      <div class="col-lg-7">
        <%= f.input :url %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7">
        <%= f.input :title %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7">
        <%= f.input :description, :as  => :text, :input_html  => {:class  => "col-lg-8", :rows  => 10} %> 
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2">
        <%= f.input :private, :as  => :boolean %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7">
        <%= f.input :tags, input_html: {value: @link.tags.nil? ? nil : @link.tags.join(",")} %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class  => "btn btn-primary" %>
      <%= link_to "Cancel", url_for(:back), :class  => "btn" %>
    </div>
  <% end %>
</div>
