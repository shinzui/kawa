<div class="link">
  <%= @link.link %>

  <%  if @link.description %>
    <p><%= @link.description %></p>
  <% end -%>

  <div class="pages">
    <% if @link.pages.present? %>
      <h6>Pages</h6>
      <ul>
        <% @link.pages.each do |page| %>
          <% if current_or_guest_user.can_read?(page) %>
            <li><%= link_to page.name, page_path(page) %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= render :partial  => 'shared/metadata', :locals  => {:presenter  => @link} %>
</div>
